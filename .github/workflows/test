name: build, test, push

on:
  push:
    branches:
      - 'main'

env:
  TEST_TAG: seyedmahdi3/dstdedi:test

jobs:
  docker:
    runs-on: ubuntu-latest
    steps:
      -
        name: Checkout
        uses: actions/checkout@v3
      -
        name: Test
        run: |
          docker run --rm -i -e CLUSTER_TOKEN="$CLUSTER_TOKEN" -e TEST__=true  seyedmahdi3/dstdedi:0.2
